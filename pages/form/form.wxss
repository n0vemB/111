.form-container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #7f8c8d;
}

.form-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.input-wrapper {
  position: relative;
  width: 100%; /* 确保容器宽度正确 */
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 60rpx 0 24rpx; /* 右侧留出图标空间 */
  font-size: 28rpx;
  color: #2c3e50;
  transition: all 0.3s ease;
  box-sizing: border-box; /* 确保padding不会增加总宽度 */
}

.form-input:focus {
  border-color: #3498db;
  background: white;
}

.input-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #bdc3c7;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(45deg, #3498db, #2980b9);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(52, 152, 219, 0.3);
}

.privacy-notice {
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 30rpx;
}

.privacy-text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.5;
}

.error-tip {
  color: #ff4444;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.form-input.error {
  border-color: #ff4444;
}
