.container {
  position: relative;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 60rpx 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 80rpx;
  line-height: 1.6;
}

.claim-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff8e53);
  color: white;
  border-radius: 50rpx;
  padding: 28rpx 80rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.4);
  border: none;
  transition: all 0.3s ease;
}

.claim-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.features {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 40rpx;
}

.feature-item {
  text-align: center;
  color: rgba(255,255,255,0.8);
  font-size: 24rpx;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}
