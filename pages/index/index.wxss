page {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  transform: translateY(-15%);
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  margin-bottom: 40rpx;
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  width: 100%;
  text-align: center;
}

.gift-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.gift-title {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.gift-desc {
  font-size: 28rpx;
  color: #7f8c8d;
  line-height: 1.6;
  margin-bottom: 50rpx;
  text-align: center;
}

.claim-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff8e53);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.4);
  border: none;
  transition: all 0.3s ease;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.claim-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.features {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 40rpx;
}

.feature-item {
  text-align: center;
  color: rgba(255,255,255,0.8);
  font-size: 24rpx;
}

.feature-icon {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
